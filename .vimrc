filetype off

" Without making backfile
set nocompatible
" Without making backfile 
set nobackup
" Without making sawpfile
set noswapfile
" Auto reload file when file edited
set autoread
" Openable when file is editing
set hidden
" Show status of input command
set showcmd
" Show line number
set number
" Emphasize current line
" set cursorline
" One more character to the end of line
set virtualedit=onemore
" Smart intent
set smartindent
" Visualize beep sound
set visualbell
" Show corresponding parentheses
set showmatch
" Show status line always
set laststatus=2
" Command line completion
set wildmode=list:longest

"" About Tab
" Visualize invisible characters
set list listchars=tab:\â–¸\-
" Make tab to space
set expandtab
" Width of Tab other than beginning line
set tabstop=2
" Width of Tab of beginning line
set shiftwidth=2

syntax on
